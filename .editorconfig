root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.scss]
indent_style=tab

[*.md]
trim_trailing_whitespace = false

[*.{js,ts,yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[{*.ctp,*.hphp,*.inc,*.module,*.php,*.php4,*.php5,*.phtml}]
ij_php_force_empty_methods_in_one_line = true
