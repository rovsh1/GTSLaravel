{
    "compilerOptions": {
        "target": "ESNext",
        "strict": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "Node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "useDefineForClassFields": false,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "allowJs": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "types": [
            "jquery",
            "./resources/js/globals",
            "./node_modules/@types/bootstrap/index",
        ],
        "baseUrl": "./",
        "paths": {
            "~resources/*": ["resources/*"],
        },
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
